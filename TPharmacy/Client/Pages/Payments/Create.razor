@page "/payments/create"
@inject HttpClient _client
@inject NavigationManager _navManager

<div class="container mt-5">
    <h1 class="header">Create New Payments</h1>
    <FormComponent ButtonText="Create Payment" OnValidSubmit="CreatePayment" payment="payment"></FormComponent>
</div>

@code 
{
    Payment payment = new Payment();
    private IList<Order> Orders;

    protected async override Task OnInitializedAsync()
    {
        Orders = await _client.GetFromJsonAsync<List<Order>>($"{Endpoints.OrdersEndpoint}/customer");
    }

    private async Task CreatePayment()
    {
        var order = Orders.FirstOrDefault(x => x.ID == payment.OrderID);
        if (order != null)
        {
            payment.OrderID = order.ID;
            payment.PayFee = order.OrderTotal;
        }
        await _client.PostAsJsonAsync(Endpoints.PaymentsEndpoint, payment);
        _navManager.NavigateTo("/cuspayments/");
    }
}
